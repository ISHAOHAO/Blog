---
const { name, url, avatar, bio } = Astro.props;
---

<a
    href={url}
    target="_blank"
    class="relative group flex items-center p-4 gap-4 rounded-xl
    bg-[var(--card-bg)] border border-black/5 dark:border-white/5
    transition-all duration-300 hover:shadow-xl hover:shadow-[var(--primary)]/10
    hover:border-[var(--primary)]/50 hover:-translate-y-1 overflow-hidden"
>
    <div class="relative shrink-0">
        <img
            src={avatar}
            alt={name}
            class="w-14 h-14 rounded-full border-2 border-black/5 dark:border-white/5 group-hover:rotate-[360deg] transition-transform duration-700 ease-in-out object-cover"
        />
        <div
            class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-[var(--card-bg)] rounded-full shadow-sm"
        >
        </div>
    </div>

    <div class="flex flex-col truncate pr-2">
        <div class="font-bold text-[var(--primary)] text-base truncate">
            {name}
        </div>

        <div
            class="text-[11px] leading-tight mt-1 line-clamp-2
            text-black/60 dark:text-white/60
            group-hover:text-black dark:group-hover:text-white
            transition-colors duration-300"
        >
            {bio || "这人很懒，还没写简介呢"}
        </div>
    </div>
</a>
