---
import WidgetLayout from "./WidgetLayout.astro";
import { Icon } from "astro-icon/components";
---

<WidgetLayout name="统计" icon="material-symbols:analytics-outline">
    <div class="flex flex-col gap-4 px-2 py-3">
        <script
            async
            src="//busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"
        ></script>

        <div
            class="flex flex-col items-center justify-center p-3 rounded-xl bg-gradient-to-br from-[oklch(98%_0.01_var(--hue))] to-[oklch(94%_0.02_var(--hue))] dark:from-white/5 dark:to-white/[0.02] border border-black/5 dark:border-white/10 shadow-inner"
        >
            <div
                class="text-[0.65rem] text-black/40 dark:text-white/40 uppercase tracking-[0.2em] mb-1 font-bold"
            >
                总浏览量
            </div>
            <div class="flex items-baseline gap-1">
                <span
                    id="busuanzi_container_site_pv"
                    class="text-3xl font-black text-[var(--primary)] drop-shadow-sm font-mono"
                >
                    <span id="busuanzi_value_site_pv" class="counter-value"
                        >0</span
                    >
                </span>
                <span class="text-[var(--primary)] opacity-50 text-xs">PV</span>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-2">
            <div
                class="flex flex-col items-center p-2 rounded-lg bg-black/[0.02] dark:bg-white/[0.02] border border-black/5 dark:border-white/5"
            >
                <div
                    class="flex items-center gap-1 text-[0.6rem] text-black/40 dark:text-white/40 mb-1"
                >
                    <Icon name="material-symbols:person-outline-rounded" />
                    <span>访客数</span>
                </div>
                <span
                    id="busuanzi_container_site_uv"
                    class="text-lg font-bold text-black/70 dark:text-white/80 font-mono"
                >
                    <span
                        id="busuanzi_value_site_uv"
                        class="counter-value text-sm">0</span
                    >
                </span>
            </div>

            <div
                class="flex flex-col items-center p-2 rounded-lg bg-black/[0.02] dark:bg-white/[0.02] border border-black/5 dark:border-white/5"
            >
                <div
                    class="text-[0.6rem] text-black/40 dark:text-white/40 mb-1 tracking-tighter"
                >
                    运行状态
                </div>
                <div class="flex items-center gap-1.5 mt-1">
                    <div class="relative flex h-2 w-2">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-2 w-2 bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)]"
                        ></span>
                    </div>
                    <span
                        class="text-[0.7rem] font-bold text-green-600 dark:text-green-400 uppercase"
                        >Active</span
                    >
                </div>
            </div>
        </div>
    </div>
</WidgetLayout>

<script>
    // 数字单位转换函数
    function formatNumber(num: number): string {
        if (num >= 1000000) {
            return (num / 1000000).toFixed(1).replace(/\.0$/, "") + "M";
        }
        if (num >= 1000) {
            return (num / 1000).toFixed(1).replace(/\.0$/, "") + "K";
        }
        return num.toString();
    }

    // 数字滚动动画函数
    function animateCounter(el: HTMLElement, target: number) {
        let start = 0;
        const duration = 1500;
        const startTime = performance.now();

        function update(currentTime: number) {
            const elapsed = currentTime - startTime;
            const progress = Math.min(elapsed / duration, 1);

            // 缓动函数
            const easeProgress = 1 - Math.pow(2, -10 * progress);
            const currentValue = Math.floor(easeProgress * target);

            // 应用单位转换逻辑
            el.innerText = formatNumber(currentValue);

            if (progress < 1) {
                requestAnimationFrame(update);
            }
        }
        requestAnimationFrame(update);
    }

    // 监测不蒜子数据加载
    const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
            if (mutation.type === "childList") {
                const target = mutation.target as HTMLElement;
                // 从注入的文本中提取纯数字
                const rawText = target.innerText.replace(/,/g, "");
                const value = parseInt(rawText);

                if (!isNaN(value) && value > 0) {
                    animateCounter(target, value);
                    observer.disconnect();
                }
            }
        });
    });

    function initStats() {
        const pvEl = document.getElementById("busuanzi_value_site_pv");
        const uvEl = document.getElementById("busuanzi_value_site_uv");
        if (pvEl) observer.observe(pvEl, { childList: true });
        if (uvEl) observer.observe(uvEl, { childList: true });
    }

    initStats();
    document.addEventListener("astro:after-swap", initStats);
</script>

<style>
    .font-mono {
        font-variant-numeric: tabular-nums;
    }
    /* 醒目数字的微光掠过动画 */
    @keyframes shine {
        0% {
            background-position: -200% center;
        }
        100% {
            background-position: 200% center;
        }
    }
    .counter-value {
        transition: all 0.5s ease-out;
    }
</style>
